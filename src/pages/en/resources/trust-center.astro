---
import Page from '../../../layouts/Page.astro';
import { AnimatedSection } from '../../../components/ui/AnimatedSection';
import { getPayload } from '../../../lib/payload';

const lang = 'en';
const cms = getPayload(Astro);
const page = await cms.globals.read('trust-center-page');
---

<Page title="Trust Center" lang={lang}>
  <!-- Hero -->
  <section class="pt-32 pb-24 bg-cream relative overflow-hidden">
    <div class="absolute inset-0 grid-lines opacity-40"></div>
    <div class="max-w-7xl mx-auto px-6 relative z-10">
      <AnimatedSection client:visible direction="up">
        <p class="text-caption text-muted mb-4">{page?.hero?.eyebrow}</p>
      </AnimatedSection>

      <AnimatedSection client:visible direction="up" delay={0.1}>
        <h1 class="text-display-xl text-charcoal mb-8">
          {page?.hero?.headline} <em class="display-serif">{page?.hero?.headlineAccent}</em>
        </h1>
      </AnimatedSection>

      <AnimatedSection client:visible direction="up" delay={0.2}>
        <p class="text-body-lg text-muted max-w-3xl mb-8">
          {page?.hero?.description}
        </p>
      </AnimatedSection>

      <AnimatedSection client:visible direction="up" delay={0.3}>
        <div class="flex flex-wrap gap-4">
          <a href="#request-docs" class="btn btn-primary">
            Request Documentation
          </a>
          <a href="/en/company" class="btn btn-secondary">
            Contact Security Team
          </a>
        </div>
      </AnimatedSection>
    </div>
  </section>

  <!-- Security & Compliance Grid -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-12">
        <AnimatedSection client:visible direction="left">
          <div>
            <p class="text-caption text-primary mb-4">Protection</p>
            <h2 class="text-display-sm text-charcoal mb-8">Security</h2>
            <div class="space-y-6">
              {page?.securityItems?.map((item: any) => (
                <div class="flex items-start gap-4">
                  <span class="w-6 h-6 bg-success-light text-success rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  </span>
                  <div>
                    <h3 class="font-medium text-charcoal">{item.title}</h3>
                    <p class="text-sm text-muted">{item.description}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </AnimatedSection>
        
        <AnimatedSection client:visible direction="right" delay={0.1}>
          <div>
            <p class="text-caption text-primary mb-4">Regulations</p>
            <h2 class="text-display-sm text-charcoal mb-8">Compliance</h2>
            <div class="space-y-6">
              {page?.complianceItems?.map((item: any) => (
                <div class="flex items-start gap-4">
                  <span class="w-6 h-6 bg-success-light text-success rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  </span>
                  <div>
                    <h3 class="font-medium text-charcoal">{item.title}</h3>
                    <p class="text-sm text-muted">{item.description}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </AnimatedSection>
      </div>
    </div>
  </section>

  <!-- Certifications Strip -->
  <section class="py-12 bg-charcoal">
    <div class="max-w-7xl mx-auto px-6">
      <div class="flex flex-col md:flex-row md:items-center justify-between gap-8">
        <span class="text-sm text-white/60">Certifications:</span>
        <div class="flex flex-wrap gap-6">
          {page?.certifications?.map((cert: any) => {
            const certText = typeof cert === 'string' ? cert : cert.text;
            return (
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-white/10 rounded flex items-center justify-center">
                  <span class="text-xs font-medium text-white">{certText.slice(0, 3)}</span>
                </div>
                <div>
                  <p class="text-sm font-medium text-white">{certText}</p>
                </div>
              </div>
            );
          })}
        </div>
      </div>
    </div>
  </section>

  <!-- Documentation Section -->
  <section id="request-docs" class="py-24 bg-cream">
    <div class="max-w-7xl mx-auto px-6">
      <div class="flex flex-col lg:flex-row lg:items-end justify-between gap-8 mb-12">
        <AnimatedSection client:visible direction="up">
          <p class="text-caption text-primary mb-4">Resources</p>
          <h2 class="text-display-md text-charcoal">Security Documentation</h2>
        </AnimatedSection>
        <AnimatedSection client:visible direction="up" delay={0.1}>
          <p class="text-muted max-w-md">
            Access our security documentation to support your procurement and 
            compliance review processes.
          </p>
        </AnimatedSection>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {page?.documents?.map((doc: any, i: number) => (
          <AnimatedSection client:visible direction="up" delay={0.05 * i}>
            <div class="card h-full flex flex-col hover:border-border-hover transition-colors">
              <div class="flex items-start justify-between gap-4 mb-4">
                <h3 class="text-lg font-medium text-charcoal">{doc.title}</h3>
                <span class={`text-xs px-2 py-1 rounded ${doc.access === 'Public' ? 'bg-success-light text-success' : 'bg-warning-light text-warning'}`}>
                  {doc.access}
                </span>
              </div>
              <p class="text-sm text-muted mb-4 flex-1">{doc.description}</p>
              <a href="#" class="text-sm font-medium text-charcoal hover:text-primary transition-colors">
                {doc.access === 'Public' ? 'Download' : 'Request Access'} â†’
              </a>
            </div>
          </AnimatedSection>
        ))}
      </div>
    </div>
  </section>

  <!-- Architecture Overview -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-16 items-center">
        <AnimatedSection client:visible direction="left">
          <div>
            <p class="text-caption text-primary mb-4">Architecture</p>
            <h2 class="text-display-md text-charcoal mb-6">Security by Design</h2>
            <p class="text-muted mb-6">
              Our platform was built with security as a foundational principle, not 
              an afterthought. From hardware to application layer, every component 
              is designed for resilience and protection.
            </p>
            <div class="space-y-4">
              <div>
                <h3 class="font-medium text-charcoal mb-1">Zero Trust Architecture</h3>
                <p class="text-sm text-muted">
                  Every request is authenticated and authorized, regardless of network location.
                </p>
              </div>
              <div>
                <h3 class="font-medium text-charcoal mb-1">Defense in Depth</h3>
                <p class="text-sm text-muted">
                  Multiple layers of security controls protect against various attack vectors.
                </p>
              </div>
              <div>
                <h3 class="font-medium text-charcoal mb-1">Minimal Attack Surface</h3>
                <p class="text-sm text-muted">
                  Edge processing means less data in transit, fewer centralized targets.
                </p>
              </div>
            </div>
          </div>
        </AnimatedSection>
        
        <AnimatedSection client:visible direction="right" delay={0.1}>
          <div class="aspect-square bg-cream rounded-2xl border border-border"></div>
        </AnimatedSection>
      </div>
    </div>
  </section>

  <!-- Incident Response -->
  <section class="py-24 bg-charcoal text-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <AnimatedSection client:visible direction="up">
          <p class="text-caption text-primary-light mb-4">Response</p>
          <h2 class="text-display-md text-white mb-4">Incident Management</h2>
          <p class="text-white/60">
            We maintain 24/7 security monitoring and a documented incident response 
            process. When issues arise, we act quickly and communicate transparently.
          </p>
        </AnimatedSection>
      </div>
      
      <div class="grid md:grid-cols-4 gap-6">
        <AnimatedSection client:visible direction="up" delay={0}>
          <div class="text-center p-6">
            <p class="text-3xl font-medium text-white mb-2">{page?.incidentResponse?.responseTime}</p>
            <p class="text-sm text-white/60">Initial response time</p>
          </div>
        </AnimatedSection>

        <AnimatedSection client:visible direction="up" delay={0.1}>
          <div class="text-center p-6">
            <p class="text-3xl font-medium text-white mb-2">{page?.incidentResponse?.monitoring}</p>
            <p class="text-sm text-white/60">Security monitoring</p>
          </div>
        </AnimatedSection>

        <AnimatedSection client:visible direction="up" delay={0.2}>
          <div class="text-center p-6">
            <p class="text-3xl font-medium text-white mb-2">{page?.incidentResponse?.notification}</p>
            <p class="text-sm text-white/60">Customer notification</p>
          </div>
        </AnimatedSection>

        <AnimatedSection client:visible direction="up" delay={0.3}>
          <div class="text-center p-6">
            <p class="text-3xl font-medium text-white mb-2">100%</p>
            <p class="text-sm text-white/60">Post-incident review</p>
          </div>
        </AnimatedSection>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 bg-cream">
    <div class="max-w-3xl mx-auto px-6 text-center">
      <AnimatedSection client:visible direction="up">
        <h2 class="text-display-md text-charcoal mb-6">
          {page?.cta?.headline}
        </h2>
        <p class="text-body-lg text-muted mb-8">
          {page?.cta?.description}
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a href={page?.cta?.primaryCta?.href} class="btn btn-primary">
            {page?.cta?.primaryCta?.text}
          </a>
          <a href="/en/resources" class="btn btn-secondary">
            Explore Resources
          </a>
        </div>
      </AnimatedSection>
    </div>
  </section>
</Page>
