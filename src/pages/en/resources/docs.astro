---
export const prerender = true;
import Page from '../../../layouts/Page.astro';
import { reader } from '../../../lib/keystatic';

const lang = 'en';
const page = await reader.singletons['docs-page'].read();
---

<Page title="Documentation" lang={lang}>
  <!-- Hero -->
  <section class="pt-32 pb-20 bg-cream relative overflow-hidden">
    <div class="absolute inset-0 grid-lines opacity-40"></div>
    <div class="max-w-7xl mx-auto px-6 relative z-10">
      <p class="text-caption text-primary mb-4">{page?.hero?.eyebrow}</p>
      <h1 class="text-display-xl text-charcoal mb-6">
        {page?.hero?.headline} <span class="display-serif text-gradient">{page?.hero?.headlineAccent}</span>
      </h1>
      <p class="text-body-lg text-muted max-w-2xl mb-10">
        {page?.hero?.description}
      </p>

      <!-- Search -->
      <div class="max-w-xl">
        <div class="relative group">
          <input 
            type="search" 
            placeholder="Search documentation..." 
            class="w-full px-5 py-4 pl-12 bg-white border border-border rounded-xl text-charcoal placeholder:text-muted focus:outline-none focus:border-primary focus:ring-2 focus:ring-primary/10 transition-all"
          />
          <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-muted group-focus-within:text-primary transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
          <kbd class="absolute right-4 top-1/2 -translate-y-1/2 hidden sm:inline-flex items-center gap-1 px-2 py-1 text-xs text-muted bg-cream border border-border rounded">
            <span class="text-[10px]">âŒ˜</span>K
          </kbd>
        </div>
      </div>
    </div>
  </section>

  <!-- Documentation Grid -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="mb-12">
        <h2 class="text-display-md text-charcoal mb-4">Browse by Category</h2>
        <p class="text-muted max-w-2xl">
          Find the documentation you need, organized by topic and use case.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {page?.docCategories?.map((category: any) => (
          <div class="group p-6 bg-cream rounded-xl border border-border hover:border-primary/30 hover:shadow-lg transition-all duration-300">
            <!-- Icon -->
            <div class="w-12 h-12 bg-white rounded-xl border border-border flex items-center justify-center mb-5 group-hover:border-primary/30 group-hover:bg-primary/5 transition-all">
              <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
              </svg>
            </div>

            <!-- Content -->
            <h3 class="text-lg font-medium text-charcoal mb-2 group-hover:text-primary transition-colors">
              {category.title}
            </h3>
            <p class="text-sm text-muted mb-5 leading-relaxed">{category.description}</p>

            <!-- Links -->
            <ul class="space-y-2">
              {category.items?.map((item: string) => (
                <li>
                  <a
                    href="#"
                    class="flex items-center gap-2 text-sm text-charcoal/80 hover:text-primary transition-colors"
                  >
                    <svg class="w-3.5 h-3.5 text-primary/50" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                    </svg>
                    <span>{item}</span>
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- SDKs Section -->
  <section class="py-24 bg-cream border-y border-border">
    <div class="max-w-7xl mx-auto px-6">
      <div class="flex flex-col lg:flex-row lg:items-end justify-between gap-8 mb-12">
        <div>
          <p class="text-caption text-primary mb-4">Developer Tools</p>
          <h2 class="text-display-md text-charcoal">SDKs & Libraries</h2>
        </div>
        <p class="text-muted max-w-md lg:text-right">
          Official SDKs for popular languages, plus community tools and integrations.
        </p>
      </div>
      
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4">
        {page?.sdks?.map((sdk: any) => (
          <a
            href="#"
            class="group flex flex-col p-5 bg-white border border-border rounded-xl hover:border-primary/30 hover:shadow-md transition-all"
          >
            <div class="flex items-center gap-3 mb-3">
              <div class="w-3 h-3 rounded-full bg-primary"></div>
              <h3 class="font-medium text-charcoal group-hover:text-primary transition-colors">{sdk.language}</h3>
              {sdk.badge && <span class="text-xs text-muted">{sdk.badge}</span>}
            </div>
            <code class="text-xs text-muted font-mono bg-cream px-3 py-2 rounded-lg border border-border">
              {sdk.installCommand}
            </code>
          </a>
        ))}
      </div>
      
      <div class="mt-8 flex items-center justify-center gap-2 text-sm text-muted">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
        </svg>
        <span>All SDKs support offline-first patterns out of the box</span>
      </div>
    </div>
  </section>

  <!-- Support Section -->
  <section class="py-24 bg-charcoal">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-16 items-start">
        <!-- Left: Info -->
        <div>
          <p class="text-caption text-primary-light mb-4">Support</p>
          <h2 class="text-display-md text-white mb-4">Need Help?</h2>
          <p class="text-white/60 mb-8 max-w-md">
            Our developer relations team is here to help you succeed. From architecture 
            reviews to debugging sessions, we're invested in your success.
          </p>
          
          <div class="space-y-4">
            {page?.supportChannels?.map((channel: any) => (
              <a href={channel.href} class="flex items-center gap-3 text-white/80 hover:text-white transition-colors">
                <div class="w-8 h-8 rounded-lg bg-white/10 flex items-center justify-center">
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                  </svg>
                </div>
                <div>
                  <span class="block">{channel.title}</span>
                  <span class="text-xs text-white/50">{channel.description}</span>
                </div>
              </a>
            ))}
          </div>
        </div>
        
        <!-- Right: Enterprise CTA -->
        <div class="p-8 bg-charcoal-light border border-white/10 rounded-2xl">
          <h3 class="text-xl font-medium text-white mb-3">Enterprise Support</h3>
          <p class="text-white/60 mb-6 leading-relaxed">
            For enterprise customers, we offer dedicated support channels, SLAs, 
            and direct access to our engineering team.
          </p>
          <ul class="space-y-2 mb-8">
            <li class="flex items-center gap-2 text-sm text-white/70">
              <svg class="w-4 h-4 text-primary-light" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              24/7 priority support
            </li>
            <li class="flex items-center gap-2 text-sm text-white/70">
              <svg class="w-4 h-4 text-primary-light" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              Dedicated account manager
            </li>
            <li class="flex items-center gap-2 text-sm text-white/70">
              <svg class="w-4 h-4 text-primary-light" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
              Custom SLA agreements
            </li>
          </ul>
          <a href="/en/company" class="btn btn-primary w-full justify-center">
            Contact Sales
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 bg-white">
    <div class="max-w-3xl mx-auto px-6 text-center">
      <h2 class="text-display-md text-charcoal mb-6">
        {page?.cta?.headline}
      </h2>
      <p class="text-body-lg text-muted mb-10">
        {page?.cta?.description}
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href={page?.cta?.primaryCta?.href} class="btn btn-primary">
          {page?.cta?.primaryCta?.text}
        </a>
        <a href={page?.cta?.secondaryCta?.href} class="btn btn-secondary">
          {page?.cta?.secondaryCta?.text}
        </a>
      </div>
    </div>
  </section>
</Page>
