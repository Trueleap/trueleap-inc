---
import Page from '../../../layouts/Page.astro';
import { getPayload } from '../../../lib/payload';

const lang = 'en';
const cms = getPayload(Astro);
const page = await cms.globals.read<Record<string, unknown>>('newsroom-page');

const news = await cms.collections.list<Record<string, unknown>>('news', {
  sort: '-publishedAt',
  limit: 100,
});
---

<Page title="Newsroom" lang={lang}>
  <!-- Hero -->
  <section class="pt-32 pb-20 bg-cream relative overflow-hidden">
    <div class="absolute inset-0 grid-lines opacity-40"></div>
    <div class="max-w-7xl mx-auto px-6 relative z-10">
      <span class="text-caption text-muted mb-4 block">{page?.hero?.eyebrow}</span>
      <h1 class="text-display-xl text-charcoal mb-8">
        {page?.hero?.headline} <span class="display-serif">{page?.hero?.headlineAccent}</span>
      </h1>
      <p class="text-body-lg text-muted max-w-3xl">
        {page?.hero?.description}
      </p>
    </div>
  </section>

  <!-- Featured News -->
  <section class="py-16 bg-charcoal">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-8">
        {news.filter((n: any) => n.featured).map((item: any) => (
          <div class="p-8 rounded-2xl bg-charcoal-light border border-border-dark">
            <span class="inline-block px-3 py-1 rounded-full bg-primary text-white text-xs font-medium mb-4">
              {item.category}
            </span>
            <p class="text-sm text-white/50 mb-2">{item.publishedAt ? new Date(item.publishedAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) : ''}</p>
            <h3 class="text-xl font-medium text-white mb-3">{item.title}</h3>
            <p class="text-white/70 text-sm">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- All News -->
  <section class="py-24 bg-white">
    <div class="max-w-4xl mx-auto px-6">
      <span class="text-caption text-primary mb-4 block">All News</span>
      <h2 class="text-display-md text-charcoal mb-12">Latest Updates</h2>
      
      <div class="space-y-0">
        {news.map((item: any, index: number) => (
          <article class={`py-8 ${index < news.length - 1 ? 'border-b border-border' : ''}`}>
            <div class="flex flex-col md:flex-row md:items-start gap-4">
              <div class="md:w-32 flex-shrink-0">
                <span class="text-xs text-primary font-medium">{item.category}</span>
                <p class="text-sm text-muted">{item.publishedAt ? new Date(item.publishedAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) : ''}</p>
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-medium text-charcoal mb-2">{item.title}</h3>
                <p class="text-muted">{item.description}</p>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Media Resources -->
  <section class="py-24 bg-cream">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-16">
        <div>
          <span class="text-caption text-primary mb-4 block">Media Resources</span>
          <h2 class="text-display-md text-charcoal mb-6">Press Kit</h2>
          <p class="text-body-lg text-muted mb-8">
            Download logos, executive photos, product images, and brand guidelines 
            for media use.
          </p>
          
          <div class="space-y-4">
            {page?.pressKitItems?.map((item: any) => (
              <a href="#" class="card group flex items-center justify-between hover:border-primary/30 transition-all" style="transition-duration: var(--duration-normal);">
                <div>
                  <h3 class="font-medium text-charcoal group-hover:text-primary transition-colors" style="transition-duration: var(--duration-normal);">{item.title}</h3>
                  <p class="text-sm text-muted">{item.description}</p>
                </div>
                <span class="text-primary">â†“</span>
              </a>
            ))}
          </div>
        </div>
        
        <div>
          <span class="text-caption text-primary mb-4 block">Contact</span>
          <h2 class="text-display-md text-charcoal mb-6">Media Inquiries</h2>
          <p class="text-body-lg text-muted mb-8">
            For press inquiries, interview requests, or additional information, 
            please contact our communications team.
          </p>
          
          <div class="card">
            <div class="flex items-center gap-4 mb-4">
              <div class="w-16 h-16 rounded-full bg-gradient-to-br from-primary-lighter to-cream flex items-center justify-center">
                <span class="text-xl font-display text-primary">{page?.mediaContact?.name?.split(' ').map((n: string) => n[0]).join('')}</span>
              </div>
              <div>
                <h3 class="font-medium text-charcoal">{page?.mediaContact?.name}</h3>
                <p class="text-sm text-muted">{page?.mediaContact?.role}</p>
              </div>
            </div>
            <a href={`mailto:${page?.mediaContact?.email}`} class="btn btn-primary w-full justify-center">
              Contact Press Team
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Page>
