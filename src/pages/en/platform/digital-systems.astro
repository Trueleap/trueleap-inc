---
export const prerender = true;
import Page from '../../../layouts/Page.astro';
import { AnimatedSection } from '../../../components/ui/AnimatedSection';
import { reader } from '../../../lib/keystatic';

const lang = 'en';
const page = await reader.singletons['digital-systems-page'].read();
---

<Page title="Digital Systems" lang={lang}>
  <!-- Hero -->
  <section class="pt-32 pb-24 bg-cream relative overflow-hidden">
    <div class="absolute inset-0 grid-lines opacity-40"></div>
    <div class="max-w-7xl mx-auto px-6 relative z-10">
      <AnimatedSection client:visible direction="up">
        <p class="text-caption text-muted mb-4">{page?.hero?.eyebrow}</p>
      </AnimatedSection>

      <AnimatedSection client:visible direction="up" delay={0.1}>
        <h1 class="text-display-xl text-charcoal mb-8">
          {page?.hero?.headline} <em class="display-serif">{page?.hero?.headlineAccent}</em>
        </h1>
      </AnimatedSection>

      <AnimatedSection client:visible direction="up" delay={0.2}>
        <p class="text-body-lg text-muted max-w-3xl mb-8">
          {page?.hero?.description}
        </p>
      </AnimatedSection>

      <AnimatedSection client:visible direction="up" delay={0.3}>
        <div class="flex flex-wrap gap-4">
          <a href={page?.hero?.ctaPrimary?.href} class="btn btn-primary">
            {page?.hero?.ctaPrimary?.text}
          </a>
          <a href={page?.hero?.ctaSecondary?.href} class="btn btn-secondary">
            {page?.hero?.ctaSecondary?.text}
          </a>
        </div>
      </AnimatedSection>
    </div>
  </section>

  <!-- Systems Overview -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6 space-y-24">
      {page?.systems?.map((system: any, index: number) => (
        <div class={`grid md:grid-cols-2 gap-12 items-center ${index % 2 === 1 ? 'md:[&>*:first-child]:order-2' : ''}`}>
          <AnimatedSection client:visible direction={index % 2 === 0 ? 'left' : 'right'} delay={0}>
            <div>
              <p class="text-caption text-primary mb-2">{system.eyebrow}</p>
              <h2 class="text-display-md text-charcoal mb-4">{system.name}</h2>
              <p class="text-body text-muted mb-6">{system.description}</p>
              <ul class="space-y-3">
                {system.features?.map((feature: any) => (
                  <li class="flex items-start gap-3">
                    <span class="w-1.5 h-1.5 rounded-full bg-primary mt-2 flex-shrink-0"></span>
                    <span class="text-charcoal/80">{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
          </AnimatedSection>
          <AnimatedSection client:visible direction={index % 2 === 0 ? 'right' : 'left'} delay={0.1}>
            <div class="aspect-video bg-cream rounded-2xl border border-border"></div>
          </AnimatedSection>
        </div>
      ))}
    </div>
  </section>

  <!-- Integration Section -->
  <section class="py-24 bg-charcoal text-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <AnimatedSection client:visible direction="up">
          <p class="text-caption text-primary-light mb-4">Unified Platform</p>
          <h2 class="text-display-md text-white mb-4">Better Together</h2>
          <p class="text-white/60">
            While each system works independently, they're designed to integrate seamlesslyâ€”sharing
            authentication, data, and insights across the platform.
          </p>
        </AnimatedSection>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {page?.integrationBenefits?.map((benefit: any, i: number) => (
          <AnimatedSection client:visible direction="up" delay={0.1 * i}>
            <div class="p-8 bg-charcoal-light border border-white/10 rounded-lg">
              <h3 class="text-xl font-medium text-white mb-3">{benefit.title}</h3>
              <p class="text-white/60 text-sm">
                {benefit.description}
              </p>
            </div>
          </AnimatedSection>
        ))}
      </div>
    </div>
  </section>

  <!-- Use Cases -->
  <section class="py-24 bg-cream">
    <div class="max-w-7xl mx-auto px-6">
      <div class="flex flex-col lg:flex-row lg:items-end justify-between gap-8 mb-12">
        <AnimatedSection client:visible direction="up">
          <p class="text-caption text-primary mb-4">Applications</p>
          <h2 class="text-display-md text-charcoal">Real-World Use Cases</h2>
        </AnimatedSection>
        <AnimatedSection client:visible direction="up" delay={0.1}>
          <a href="/en/impact/case-studies" class="link-arrow font-medium text-charcoal">
            View case studies
          </a>
        </AnimatedSection>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {page?.useCases?.map((useCase: any, i: number) => (
          <AnimatedSection client:visible direction="up" delay={0.1 * i}>
            <div class="card">
              <p class="text-caption text-primary mb-2">{useCase.category}</p>
              <h3 class="text-xl font-medium text-charcoal mb-2">{useCase.title}</h3>
              <p class="text-muted text-sm">
                {useCase.description}
              </p>
            </div>
          </AnimatedSection>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 bg-white">
    <div class="max-w-3xl mx-auto px-6 text-center">
      <AnimatedSection client:visible direction="up">
        <h2 class="text-display-md text-charcoal mb-6">
          {page?.cta?.headline}
        </h2>
        <p class="text-body-lg text-muted mb-8">
          {page?.cta?.description}
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a href={page?.cta?.primaryCta?.href} class="btn btn-primary">
            {page?.cta?.primaryCta?.text}
          </a>
          <a href={page?.cta?.secondaryCta?.href} class="btn btn-secondary">
            {page?.cta?.secondaryCta?.text}
          </a>
        </div>
      </AnimatedSection>
    </div>
  </section>
</Page>
