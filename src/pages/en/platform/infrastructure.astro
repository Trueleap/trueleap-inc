---
export const prerender = true;
import Page from '../../../layouts/Page.astro';
import { reader } from '../../../lib/keystatic';

const lang = 'en';
const page = await reader.singletons['infrastructure-page'].read();
---

<Page title="Physical Infrastructure" lang={lang}>
  <!-- Hero -->
  <section class="pt-32 pb-20 bg-cream relative overflow-hidden">
    <div class="absolute inset-0 grid-lines opacity-40"></div>
    <div class="max-w-7xl mx-auto px-6 relative z-10">
      <span class="text-caption text-primary mb-4 block">{page?.hero?.eyebrow}</span>
      <h1 class="text-display-xl text-charcoal mb-8">
        {page?.hero?.headline} <span class="display-serif">{page?.hero?.headlineAccent}</span>
      </h1>
      <p class="text-body-lg text-muted max-w-3xl mb-8">
        {page?.hero?.description}
      </p>
      <div class="flex flex-wrap gap-4">
        <a href={page?.hero?.ctaPrimary?.href} class="btn btn-primary">
          {page?.hero?.ctaPrimary?.text}
        </a>
        <a href={page?.hero?.ctaSecondary?.href} class="btn btn-secondary">
          {page?.hero?.ctaSecondary?.text}
        </a>
      </div>
    </div>
  </section>

  <!-- Stats -->
  <section class="py-16 bg-charcoal">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {page?.stats?.map((stat: any) => (
          <div class="text-center">
            <p class="text-3xl md:text-4xl font-medium text-white mb-1">{stat.value}</p>
            <p class="text-sm text-white/60">{stat.label}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Products -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="text-caption text-primary mb-4 block">Hardware</span>
        <h2 class="text-display-lg text-charcoal mb-6">Edge Node Family</h2>
        <p class="text-body-lg text-muted">
          Three node types designed to work together, covering every deployment scenario
          from emergency response to permanent community infrastructure.
        </p>
      </div>

      <div class="space-y-12">
        {page?.nodes?.map((product: any, index: number) => (
          <div class={`grid lg:grid-cols-2 gap-12 items-center ${index % 2 === 1 ? 'lg:grid-flow-dense' : ''}`}>
            <div class={index % 2 === 1 ? 'lg:col-start-2' : ''}>
              <span class="inline-block px-3 py-1 rounded-full bg-indigo-light text-primary text-xs font-medium mb-4">
                {product.tagline}
              </span>
              <h3 class="text-display-md text-charcoal mb-4">{product.name}</h3>
              <p class="text-body-lg text-muted mb-6">{product.description}</p>

              <div class="grid grid-cols-2 gap-4">
                {product.specs?.map((spec: any) => (
                  <div class="py-2 border-b border-border">
                    <p class="text-xs text-muted uppercase tracking-wider">{spec.label}</p>
                    <p class="text-sm font-medium text-charcoal">{spec.value}</p>
                  </div>
                ))}
              </div>
            </div>

            <div class={`aspect-square bg-cream border border-border flex items-center justify-center ${index % 2 === 1 ? 'lg:col-start-1' : ''}`}>
              <div class="text-center p-8">
                <div class="w-24 h-24 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-primary-lighter to-cream flex items-center justify-center">
                  <svg class="w-12 h-12 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
                  </svg>
                </div>
                <p class="text-lg font-medium text-charcoal">{product.name}</p>
                <p class="text-sm text-muted">{product.tagline}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="py-24 bg-cream">
    <div class="max-w-7xl mx-auto px-6">
      <div class="max-w-3xl mb-16">
        <span class="text-caption text-primary mb-4 block">Engineering</span>
        <h2 class="text-display-lg text-charcoal mb-6">Built for the Real World</h2>
        <p class="text-body-lg text-muted">
          Every component is designed for reliability in challenging environments.
          No moving parts. No maintenance required. Just deploy and forget.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        {page?.features?.map((feature: any) => (
          <div class="card">
            <div class="w-12 h-12 rounded-xl bg-primary-lighter/50 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <h3 class="text-xl font-medium text-charcoal mb-2">{feature.title}</h3>
            <p class="text-muted">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Deployment Models -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="text-caption text-primary mb-4 block">Deployment</span>
        <h2 class="text-display-lg text-charcoal mb-6">Flexible Topologies</h2>
        <p class="text-body-lg text-muted">
          Mix and match node types to create the perfect deployment for your environment.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {page?.deploymentModels?.map((model: any) => (
          <div class="card text-center">
            <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-cream border border-border flex items-center justify-center">
              <svg class="w-8 h-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
              </svg>
            </div>
            <h3 class="text-lg font-medium text-charcoal mb-2">{model.name}</h3>
            <p class="text-sm text-muted mb-4">{model.description}</p>
            <p class="text-xs text-primary">Ideal for: {model.ideal}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 bg-charcoal text-white">
    <div class="max-w-3xl mx-auto px-6 text-center">
      <h2 class="text-display-md text-white mb-6">{page?.cta?.headline}</h2>
      <p class="text-body-lg text-white/70 mb-8">
        {page?.cta?.description}
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href={page?.cta?.primaryCta?.href} class="btn bg-white text-charcoal hover:bg-white/90">
          {page?.cta?.primaryCta?.text}
        </a>
        <a href={page?.cta?.secondaryCta?.href} class="btn border border-white/20 text-white hover:bg-white/10">
          {page?.cta?.secondaryCta?.text}
        </a>
      </div>
    </div>
  </section>
</Page>
