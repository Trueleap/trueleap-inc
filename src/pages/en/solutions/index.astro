---
export const prerender = true;
import Page from '../../../layouts/Page.astro';
import { reader } from '../../../lib/keystatic';

const lang = 'en';

const data = await reader.singletons['solutions-overview'].read();
const hero = data?.hero;
const industryCards = data?.industryCards ?? [];
const outcomeCards = data?.outcomeCards ?? [];
const cta = data?.cta;
---

<Page title="Solutions" lang={lang}>
  <!-- Hero -->
  <section class="pt-32 pb-20 bg-cream relative overflow-hidden">
    <div class="absolute inset-0 grid-lines opacity-40"></div>
    <div class="max-w-7xl mx-auto px-6 relative z-10">
      <span class="text-caption text-primary mb-4 block">{hero?.eyebrow}</span>
      <h1 class="text-display-xl text-charcoal mb-8">
        {hero?.headline} <span class="display-serif">{hero?.headlineAccent}</span>
      </h1>
      <p class="text-body-lg text-muted max-w-3xl">
        {hero?.description}
      </p>
    </div>
  </section>

  <!-- By Industry -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="mb-16">
        <span class="text-caption text-primary mb-4 block">By Industry</span>
        <h2 class="text-display-lg text-charcoal">Solutions for Your Sector</h2>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        {industryCards.map((industry) => (
          <a href={industry.href} class="group">
            <div class="h-full p-8 rounded-2xl bg-cream border border-border hover:border-primary transition-all hover:-translate-y-1 hover:shadow-xl hover:shadow-primary/10">
              <h3 class="text-2xl font-medium text-charcoal mb-3 group-hover:text-primary transition-colors">
                {industry.title}
              </h3>
              <p class="text-muted mb-6">{industry.description}</p>

              <ul class="space-y-2 mb-6">
                {industry.features.map((feature) => (
                  <li class="flex items-center gap-2 text-sm text-charcoal">
                    <svg class="w-4 h-4 text-primary flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>

              <span class="inline-flex items-center gap-2 text-primary font-medium group-hover:gap-3 transition-all">
                Learn more
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- By Outcome -->
  <section class="py-24 bg-charcoal text-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="mb-16">
        <span class="text-caption text-primary-light mb-4 block">By Outcome</span>
        <h2 class="text-display-lg text-white">What You Want to Achieve</h2>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {outcomeCards.map((outcome) => (
          <a href={outcome.href} class="group">
            <div class="h-full p-8 rounded-2xl bg-charcoal-light border border-border-dark hover:border-primary transition-all">
              <div class="w-12 h-12 rounded-xl bg-primary/20 flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-primary-light" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              </div>
              <h3 class="text-xl font-medium text-white mb-2">{outcome.title}</h3>
              <p class="text-white/60 mb-4">{outcome.description}</p>
              <span class="inline-flex items-center gap-2 text-primary-light text-sm font-medium group-hover:gap-3 transition-all">
                Explore
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 bg-cream">
    <div class="max-w-3xl mx-auto px-6 text-center">
      <h2 class="text-display-md text-charcoal mb-6">
        {cta?.headline}
      </h2>
      <p class="text-body-lg text-muted mb-8">
        {cta?.description}
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href={cta?.primaryCta?.href} class="btn btn-primary">
          {cta?.primaryCta?.text}
        </a>
        <a href={cta?.secondaryCta?.href} class="btn btn-secondary">
          {cta?.secondaryCta?.text}
        </a>
      </div>
    </div>
  </section>
</Page>
