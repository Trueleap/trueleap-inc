---
import Page from '../../../layouts/Page.astro';
import { Globe } from '../../../components/globe/Globe';
import { AnimatedSection } from '../../../components/ui/AnimatedSection';
import { NumberTicker } from '../../../components/ui/NumberTicker';
import { payload } from '../../../lib/payload';

const lang = 'en';
const cms = payload;
const page = await cms.globals.read('network-map-page');

const liveStats = page?.liveStats ?? [];
const regions = page?.regionalDistribution ?? [];
const recentDeployments = page?.recentDeployments ?? [];
const networkArchitecture = page?.networkArchitecture ?? [];
---

<Page title="Live Network Map" lang={lang}>
  <!-- Hero -->
  <section class="pt-32 pb-20 bg-cream relative overflow-hidden">
    <div class="absolute inset-0 grid-lines opacity-40"></div>
    <div class="max-w-7xl mx-auto px-6 relative z-10">
      <AnimatedSection client:visible direction="up">
        <div class="flex items-center gap-3 mb-4">
          <span class="relative flex h-2.5 w-2.5">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-success opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-success"></span>
          </span>
          <span class="text-caption text-muted">{page?.hero?.eyebrow}</span>
        </div>
      </AnimatedSection>

      <AnimatedSection client:visible direction="up" delay={0.1}>
        <h1 class="text-display-xl text-charcoal mb-6">
          {page?.hero?.headline} <span class="display-serif text-gradient">{page?.hero?.headlineAccent}</span>
        </h1>
      </AnimatedSection>

      <AnimatedSection client:visible direction="up" delay={0.2}>
        <p class="text-body-lg text-muted max-w-2xl mb-8">
          {page?.hero?.description}
        </p>
      </AnimatedSection>

      <AnimatedSection client:visible direction="up" delay={0.3}>
        <div class="flex flex-wrap gap-4">
          <a href="/en/impact/case-studies" class="btn btn-primary">
            View Case Studies
          </a>
          <a href="/en/resources/docs" class="btn btn-secondary">
            API Documentation
          </a>
        </div>
      </AnimatedSection>
    </div>
  </section>

  <!-- Stats Strip -->
  <section class="py-12 bg-charcoal">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {liveStats.map((stat) => (
          <div class="text-center">
            <p class="text-3xl md:text-4xl font-medium text-white mb-1">
              <NumberTicker client:visible value={stat?.value} />{stat?.suffix}
            </p>
            <p class="text-sm text-white/60">{stat?.label}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Interactive Globe -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <AnimatedSection client:visible direction="up">
          <span class="text-caption text-primary mb-4 block">Interactive Map</span>
          <h2 class="text-display-md text-charcoal mb-4">Explore Our Network</h2>
          <p class="text-muted">
            Drag to rotate, scroll to zoom. Each point represents an active edge node
            serving its local community.
          </p>
        </AnimatedSection>
      </div>

      <AnimatedSection client:visible direction="up" delay={0.2}>
        <div class="h-[50vh] md:h-[70vh] lg:h-[80vh]">
          <Globe client:visible />
        </div>
      </AnimatedSection>

      <!-- Legend -->
      <div class="mt-6 flex flex-wrap items-center justify-center gap-6 text-sm text-muted">
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-success"></span>
          <span>Online</span>
        </div>
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-warning"></span>
          <span>Syncing</span>
        </div>
        <div class="flex items-center gap-2">
          <span class="w-3 h-3 rounded-full bg-primary"></span>
          <span>High Traffic</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Regional Breakdown -->
  <section class="py-24 bg-cream">
    <div class="max-w-7xl mx-auto px-6">
      <div class="flex flex-col lg:flex-row lg:items-end justify-between gap-8 mb-12">
        <AnimatedSection client:visible direction="up">
          <span class="text-caption text-primary mb-4 block">Regional Distribution</span>
          <h2 class="text-display-md text-charcoal">Deployments by Region</h2>
        </AnimatedSection>
        <AnimatedSection client:visible direction="up" delay={0.1}>
          <p class="text-muted max-w-md">
            Our network spans 6 continents, with the highest concentration in
            Sub-Saharan Africa where the need is greatest.
          </p>
        </AnimatedSection>
      </div>

      <div class="space-y-4">
        {regions.map((region, i) => (
          <AnimatedSection client:visible direction="up" delay={0.1 * i}>
            <div class="card !p-6 flex flex-col md:flex-row md:items-center justify-between gap-4 hover:border-border-hover transition-colors">
              <div class="flex-1">
                <h3 class="text-lg font-medium text-charcoal">{region?.region}</h3>
                <p class="text-sm text-muted">{region?.description}</p>
              </div>
              <div class="flex items-center gap-8">
                <div class="text-right">
                  <p class="text-2xl font-medium text-charcoal">{region?.nodes}</p>
                  <p class="text-xs text-muted">active nodes</p>
                </div>
                <div class="w-16 text-right">
                  <span class="inline-block px-2 py-1 bg-success-light text-success text-sm font-medium">
                    {region?.growth}
                  </span>
                </div>
              </div>
            </div>
          </AnimatedSection>
        ))}
      </div>
    </div>
  </section>

  <!-- Recent Deployments -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="flex flex-col lg:flex-row lg:items-end justify-between gap-8 mb-12">
        <AnimatedSection client:visible direction="up">
          <span class="text-caption text-primary mb-4 block">Activity</span>
          <h2 class="text-display-md text-charcoal">Recent Deployments</h2>
        </AnimatedSection>
        <AnimatedSection client:visible direction="up" delay={0.1}>
          <a href="/en/impact/case-studies" class="link-arrow font-medium text-charcoal">
            View all case studies
          </a>
        </AnimatedSection>
      </div>

      <div class="grid md:grid-cols-2 gap-6">
        {recentDeployments.map((deployment, i) => (
          <AnimatedSection client:visible direction="up" delay={0.1 * i}>
            <div class="card hover:border-border-hover transition-colors">
              <div class="flex items-start justify-between mb-4">
                <div>
                  <h3 class="text-lg font-medium text-charcoal">{deployment?.location}</h3>
                  <p class="text-sm text-muted">{deployment?.nodes}</p>
                </div>
                <span class="text-xs text-muted">{deployment?.status}</span>
              </div>
              <div class="flex items-center gap-2">
                <span class="w-2 h-2 rounded-full bg-success"></span>
                <span class="text-sm text-charcoal">{deployment?.status}</span>
              </div>
            </div>
          </AnimatedSection>
        ))}
      </div>
    </div>
  </section>

  <!-- Technical Specs -->
  <section class="py-24 bg-charcoal text-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <AnimatedSection client:visible direction="up">
          <span class="text-caption text-primary-light mb-4 block">Infrastructure</span>
          <h2 class="text-display-md text-white mb-4">Network Architecture</h2>
          <p class="text-white/60">
            Our decentralized mesh network is designed for resilience,
            with no single point of failure.
          </p>
        </AnimatedSection>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {networkArchitecture.map((item, i) => (
          <AnimatedSection client:visible direction="up" delay={0.1 * i}>
            <div class="p-8 bg-charcoal-light border border-white/10 rounded-lg">
              <div class="w-12 h-12 bg-primary/20 rounded-lg flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-primary-light" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
                </svg>
              </div>
              <h3 class="text-xl font-medium text-white mb-2">{item?.title}</h3>
              <p class="text-white/60 text-sm">
                {item?.description}
              </p>
            </div>
          </AnimatedSection>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 bg-cream">
    <div class="max-w-3xl mx-auto px-6 text-center">
      <AnimatedSection client:visible direction="up">
        <h2 class="text-display-md text-charcoal mb-6">
          {page?.cta?.headline}
        </h2>
        <p class="text-body-lg text-muted mb-8">
          {page?.cta?.description}
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a href={page?.cta?.primaryCta?.href} class="btn btn-primary">
            {page?.cta?.primaryCta?.text}
          </a>
          <a href={page?.cta?.secondaryCta?.href} class="btn btn-secondary">
            {page?.cta?.secondaryCta?.text}
          </a>
        </div>
      </AnimatedSection>
    </div>
  </section>
</Page>
