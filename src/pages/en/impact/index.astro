---
import Page from '../../../layouts/Page.astro';
import { payload } from '../../../lib/payload';

const lang = 'en';
const cms = payload;
const page = await cms.globals.read('impact-overview');

const stats = page?.stats ?? [];
const navCards = page?.navCards ?? [];
const regionalHighlights = page?.regionalHighlights ?? [];
---

<Page title="Global Impact" lang={lang}>
  <!-- Hero -->
  <section class="pt-32 pb-20 bg-cream relative overflow-hidden">
    <div class="absolute inset-0 grid-lines opacity-40"></div>
    <div class="max-w-7xl mx-auto px-6 relative z-10">
      <span class="text-caption text-muted mb-4 block">{page?.hero?.eyebrow}</span>
      <h1 class="text-display-xl text-charcoal mb-8">
        {page?.hero?.headline} <span class="display-serif">{page?.hero?.headlineAccent}</span>
      </h1>
      <p class="text-body-lg text-muted max-w-3xl">
        {page?.hero?.description}
      </p>
    </div>
  </section>

  <!-- Stats -->
  <section class="py-16 bg-charcoal">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {stats.map((stat) => (
          <div class="text-center">
            <p class="text-3xl md:text-4xl font-medium text-white mb-1">{stat?.value}</p>
            <p class="text-sm text-white/60">{stat?.label}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Navigation Cards -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-8">
        {navCards.map((section) => (
          <a href={section?.href} class="card group hover:border-primary/30 transition-all flex flex-col" style="transition-duration: var(--duration-normal);">
            <div class="w-12 h-12 rounded-xl bg-primary-lighter/50 flex items-center justify-center mb-4 group-hover:bg-primary-lighter transition-colors" style="transition-duration: var(--duration-normal);">
              <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-medium text-charcoal mb-2 group-hover:text-primary transition-colors" style="transition-duration: var(--duration-normal);">
              {section?.title}
            </h3>
            <p class="text-muted mb-4 flex-1">{section?.description}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Regional Highlights -->
  <section class="py-24 bg-cream">
    <div class="max-w-7xl mx-auto px-6">
      <div class="max-w-3xl mb-16">
        <span class="text-caption text-primary mb-4 block">Regional Presence</span>
        <h2 class="text-display-lg text-charcoal mb-6">Impact by Region</h2>
        <p class="text-body-lg text-muted">
          TrueLeap operates across four continents, with deployments tailored to
          the unique needs and contexts of each region.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-6">
        {regionalHighlights.map((region) => (
          <div class="card">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-medium text-charcoal">{region?.region}</h3>
            </div>
            <p class="text-sm text-muted mb-2">{region?.description}</p>
            <p class="text-sm text-muted italic">{region?.story}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Quote -->
  <section class="py-24 bg-charcoal text-white">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <blockquote class="text-2xl md:text-3xl font-display italic text-white leading-relaxed mb-8">
        "{page?.testimonialQuote?.text}"
      </blockquote>
      <div class="flex items-center justify-center gap-4">
        <div class="w-12 h-12 rounded-full bg-gradient-to-br from-primary-lighter to-primary flex items-center justify-center">
          <span class="text-lg font-display text-white">{page?.testimonialQuote?.attribution?.split(' ').map((n: string) => n[0]).join('')}</span>
        </div>
        <div class="text-left">
          <p class="font-medium text-white">{page?.testimonialQuote?.attribution}</p>
          <p class="text-sm text-white/60">{page?.testimonialQuote?.role}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 bg-white border-t border-border">
    <div class="max-w-3xl mx-auto px-6 text-center">
      <h2 class="text-display-md text-charcoal mb-6">{page?.cta?.headline}</h2>
      <p class="text-body-lg text-muted mb-8">
        {page?.cta?.description}
      </p>
      <div class="flex flex-wrap items-center justify-center gap-4">
        <a href={page?.cta?.primaryCta?.href} class="btn btn-primary">
          {page?.cta?.primaryCta?.text}
        </a>
        <a href={page?.cta?.secondaryCta?.href} class="btn btn-secondary">
          {page?.cta?.secondaryCta?.text}
        </a>
      </div>
    </div>
  </section>
</Page>
