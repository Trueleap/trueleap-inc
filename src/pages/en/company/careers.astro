---
import Page from '../../../layouts/Page.astro';
import { payload } from '../../../lib/payload';

const lang = 'en';
const cms = payload;

const page = await cms.globals.read<Record<string, unknown>>('careers-page');

const allJobs = await cms.collections.list<Record<string, unknown>>('jobs');
const jobs = allJobs
  .filter((job) => job?.active === true)
  .sort((a, b) => ((a?.order as number) ?? 0) - ((b?.order as number) ?? 0));

// Build department counts from active jobs
const departmentCounts: Record<string, number> = {};
jobs.forEach((job) => {
  const dept = job?.department || 'Other';
  departmentCounts[dept] = (departmentCounts[dept] || 0) + 1;
});
const departments = Object.entries(departmentCounts).map(([name, count]) => ({ name, count }));
---

<Page title="Careers" lang={lang}>
  <!-- Hero -->
  <section class="pt-32 pb-20 bg-cream relative overflow-hidden">
    <div class="absolute inset-0 grid-lines opacity-40"></div>
    <div class="max-w-7xl mx-auto px-6 relative z-10">
      <span class="text-caption text-muted mb-4 block">{page?.hero?.eyebrow}</span>
      <h1 class="text-display-xl text-charcoal mb-8">
        {page?.hero?.headline} <span class="display-serif">{page?.hero?.headlineAccent}</span>
      </h1>
      <p class="text-body-lg text-muted max-w-3xl mb-8">
        {page?.hero?.description}
      </p>
      <div class="flex flex-wrap gap-4">
        <a href={page?.hero?.ctaPrimary?.href} class="btn btn-primary">
          {page?.hero?.ctaPrimary?.text}
        </a>
        <a href={page?.hero?.ctaSecondary?.href} class="btn btn-secondary">
          {page?.hero?.ctaSecondary?.text}
        </a>
      </div>
    </div>
  </section>

  <!-- Stats -->
  <section class="py-12 bg-charcoal">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {page?.stats?.map((stat) => (
          <div class="text-center">
            <p class="text-3xl md:text-4xl font-medium text-white mb-1">{stat?.value}</p>
            <p class="text-sm text-white/60">{stat?.label}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits -->
  <section class="py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <span class="text-caption text-primary mb-4 block">Benefits</span>
        <h2 class="text-display-lg text-charcoal mb-6">Why TrueLeap</h2>
        <p class="text-body-lg text-muted">
          We offer competitive compensation and benefits, but what makes us different
          is the opportunity to do meaningful work with a global impact.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {page?.benefits?.map((benefit) => (
          <div class="card">
            <div class="w-12 h-12 rounded-xl bg-primary-lighter/50 flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-medium text-charcoal mb-2">{benefit?.title}</h3>
            <p class="text-sm text-muted">{benefit?.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Open Positions -->
  <section id="open-positions" class="py-24 bg-cream">
    <div class="max-w-4xl mx-auto px-6">
      <div class="flex items-center justify-between mb-12">
        <div>
          <span class="text-caption text-primary mb-4 block">Open Positions</span>
          <h2 class="text-display-md text-charcoal">{jobs.length} Open Roles</h2>
        </div>
        <div class="hidden md:flex gap-2">
          {departments.map((dept) => (
            <span class="px-3 py-1 text-xs bg-white border border-border text-muted">
              {dept.name} ({dept.count})
            </span>
          ))}
        </div>
      </div>

      <div class="space-y-4">
        {jobs.map((job) => (
          <a
            href={`mailto:careers@trueleapinc.com?subject=Application: ${job?.title}`}
            class="block card group hover:border-primary/30 transition-all"
            style="transition-duration: var(--duration-normal);"
          >
            <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
              <div class="flex-1">
                <div class="flex items-center gap-3 mb-2">
                  <h3 class="text-lg font-medium text-charcoal group-hover:text-primary transition-colors" style="transition-duration: var(--duration-normal);">
                    {job?.title}
                  </h3>
                </div>
                <p class="text-sm text-muted mb-2">{job?.summary}</p>
                <div class="flex flex-wrap gap-2">
                  <span class="px-2 py-1 text-xs bg-cream text-muted">{job?.department}</span>
                  <span class="px-2 py-1 text-xs bg-cream text-muted">{job?.location}</span>
                  <span class="px-2 py-1 text-xs bg-cream text-muted">{job?.type}</span>
                </div>
              </div>
              <div class="flex-shrink-0">
                <span class="inline-flex items-center gap-2 text-primary font-medium group-hover:gap-3 transition-all" style="transition-duration: var(--duration-normal);">
                  Apply
                  <span>&rarr;</span>
                </span>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Application Process -->
  <section class="py-24 bg-white">
    <div class="max-w-4xl mx-auto px-6">
      <div class="text-center mb-16">
        <span class="text-caption text-primary mb-4 block">Process</span>
        <h2 class="text-display-md text-charcoal mb-6">How We Hire</h2>
      </div>

      <div class="grid md:grid-cols-4 gap-8">
        {page?.hiringProcess?.map((phase) => (
          <div class="text-center">
            <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-primary-lighter flex items-center justify-center">
              <span class="text-sm font-medium text-primary">{phase?.step}</span>
            </div>
            <h3 class="text-lg font-medium text-charcoal mb-2">{phase?.title}</h3>
            <p class="text-sm text-muted">{phase?.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 bg-charcoal text-white">
    <div class="max-w-3xl mx-auto px-6 text-center">
      <h2 class="text-display-md text-white mb-6">{page?.cta?.headline}</h2>
      <p class="text-body-lg text-white/70 mb-8">
        {page?.cta?.description}
      </p>
      <a href={page?.cta?.ctaHref} class="btn bg-white text-charcoal hover:bg-white/90">
        {page?.cta?.ctaText}
      </a>
    </div>
  </section>
</Page>
