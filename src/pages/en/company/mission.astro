---
import Page from '../../../layouts/Page.astro';
import { AnimatedSection } from '../../../components/ui/AnimatedSection';
import { getPayload } from '../../../lib/payload';

const lang = 'en';
const cms = getPayload(Astro);
const page = await cms.globals.read('mission-page');

// Icon components
const icons: Record<string, string> = {
  flag: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9" />',
  leaf: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 21c-4-4-8-7.582-8-12a8 8 0 1116 0c0 4.418-4 8-8 12z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 13V7m0 0l-2 2m2-2l2 2" />',
  globe: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 21a9 9 0 100-18 9 9 0 000 18z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.6 9h16.8M3.6 15h16.8" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 3a15.3 15.3 0 014 9 15.3 15.3 0 01-4 9 15.3 15.3 0 01-4-9 15.3 15.3 0 014-9z" />',
  chart: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />',
};
---

<Page title="Mission & Vision" lang={lang}>
  <!-- Hero -->
  <section class="pt-32 pb-24 bg-cream relative overflow-hidden">
    <div class="absolute inset-0 grid-lines opacity-40"></div>
    <div class="max-w-7xl mx-auto px-6 relative z-10">
      <AnimatedSection client:visible direction="up">
        <span class="inline-flex items-center gap-2 text-muted font-mono text-xs tracking-widest uppercase mb-6">
          <span class="w-8 h-px bg-primary"></span>
          {page?.hero?.eyebrow}
        </span>
        <h1 class="text-display-xl text-charcoal mb-6">
          {page?.hero?.headline} <span class="display-serif text-primary">{page?.hero?.headlineAccent}</span>
        </h1>
        <p class="text-body-lg text-muted max-w-3xl leading-relaxed">
          {page?.hero?.description}
        </p>
      </AnimatedSection>
    </div>
  </section>

  <!-- Mission & Vision Cards -->
  <section class="py-24 bg-paper">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-8">
        <!-- Mission Card -->
        <AnimatedSection client:visible direction="up" delay={0.1}>
          <div class="group h-full p-8 lg:p-10 rounded-2xl bg-white border border-border shadow-sm hover:shadow-md hover:border-primary/20 transition-all duration-300">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center">
                <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <span class="text-primary font-mono text-xs tracking-widest uppercase">Our Mission</span>
            </div>
            <h2 class="text-2xl lg:text-3xl font-medium text-charcoal mb-4 leading-snug">
              {page?.mission?.title}
            </h2>
            <p class="text-muted leading-relaxed">
              {page?.mission?.description}
            </p>
          </div>
        </AnimatedSection>

        <!-- Vision Card -->
        <AnimatedSection client:visible direction="up" delay={0.2}>
          <div class="group h-full p-8 lg:p-10 rounded-2xl bg-charcoal text-white relative overflow-hidden">
            <!-- Decorative gradient -->
            <div class="absolute top-0 right-0 w-64 h-64 bg-primary/20 rounded-full blur-[80px] -translate-y-1/2 translate-x-1/2"></div>

            <div class="relative z-10">
              <div class="flex items-center gap-3 mb-6">
                <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary-light" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                </div>
                <span class="text-primary-light font-mono text-xs tracking-widest uppercase">Our Vision</span>
              </div>
              <h2 class="text-2xl lg:text-3xl font-medium text-white mb-4 leading-snug">
                {page?.vision?.title}
              </h2>
              <p class="text-white/70 leading-relaxed">
                {page?.vision?.description}
              </p>
            </div>
          </div>
        </AnimatedSection>
      </div>
    </div>
  </section>

  <!-- Manifesto Quote -->
  <section id="manifesto" class="py-32 bg-cream relative overflow-hidden">
    <!-- Decorative elements -->
    <div class="absolute left-0 top-1/2 -translate-y-1/2 w-px h-32 bg-gradient-to-b from-transparent via-primary/30 to-transparent"></div>
    <div class="absolute right-0 top-1/2 -translate-y-1/2 w-px h-32 bg-gradient-to-b from-transparent via-primary/30 to-transparent"></div>

    <AnimatedSection client:visible direction="up">
      <div class="max-w-4xl mx-auto px-6 text-center">
        <svg class="w-12 h-12 text-primary/20 mx-auto mb-8" fill="currentColor" viewBox="0 0 24 24">
          <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
        </svg>
        <blockquote class="text-display-md text-charcoal mb-8 display-serif leading-tight">
          "{page?.manifestoQuote}"
        </blockquote>
        <div class="flex items-center justify-center gap-3">
          <div class="w-12 h-px bg-primary/30"></div>
          <p class="text-muted font-mono text-sm tracking-wider uppercase">From the TrueLeap Manifesto</p>
          <div class="w-12 h-px bg-primary/30"></div>
        </div>
      </div>
    </AnimatedSection>
  </section>

  <!-- Values -->
  <section class="py-24 bg-paper">
    <div class="max-w-7xl mx-auto px-6">
      <AnimatedSection client:visible direction="up">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <span class="text-primary font-mono text-xs tracking-widest uppercase mb-4 block">Our Values</span>
          <h2 class="text-display-lg text-charcoal">What We Stand For</h2>
        </div>
      </AnimatedSection>

      <div class="grid md:grid-cols-2 gap-6">
        {page?.values?.map((value, i) => (
          <AnimatedSection client:visible direction="up" delay={0.1 * i}>
            <div class="group h-full p-8 rounded-xl bg-white border border-border shadow-sm hover:shadow-md hover:border-primary/20 transition-all duration-300">
              <div class="flex items-start gap-5">
                <div class="flex-shrink-0 w-14 h-14 rounded-xl bg-primary/10 flex items-center justify-center group-hover:bg-primary/15 transition-colors duration-300">
                  <svg class="w-7 h-7 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" set:html={icons[value?.icon || ''] || icons.flag} />
                </div>
                <div class="flex-1 min-w-0">
                  <h3 class="text-xl font-medium text-charcoal mb-2 group-hover:text-primary transition-colors duration-300">{value?.title}</h3>
                  <p class="text-muted leading-relaxed">{value?.description}</p>
                </div>
              </div>
            </div>
          </AnimatedSection>
        ))}
      </div>
    </div>
  </section>

  <!-- Timeline -->
  <section class="py-24 bg-white">
    <div class="max-w-4xl mx-auto px-6">
      <AnimatedSection client:visible direction="up">
        <div class="text-center max-w-3xl mx-auto mb-20">
          <span class="text-primary font-mono text-xs tracking-widest uppercase mb-4 block">Our Journey</span>
          <h2 class="text-display-lg text-charcoal">Building the Future</h2>
        </div>
      </AnimatedSection>

      <div class="relative">
        <!-- Timeline line -->
        <div class="absolute left-6 md:left-1/2 md:-translate-x-px top-0 bottom-0 w-0.5 bg-border"></div>

        <div class="space-y-12">
          {page?.milestones?.map((milestone, i) => (
            <AnimatedSection client:visible direction="up" delay={0.05 * i}>
              <div class={`relative flex items-start ${i % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'}`}>
                <!-- Content -->
                <div class={`pl-16 md:pl-0 md:w-1/2 ${i % 2 === 0 ? 'md:pr-12 md:text-right' : 'md:pl-12'}`}>
                  <span class="text-2xl font-display font-semibold text-primary">{milestone?.year}</span>
                  <h3 class="text-lg font-medium text-charcoal mt-1 mb-2">{milestone?.title}</h3>
                  <p class="text-muted text-sm leading-relaxed">{milestone?.description}</p>
                </div>

                <!-- Timeline dot -->
                <div class="absolute left-6 md:left-1/2 top-1 w-3 h-3 -translate-x-1/2 rounded-full bg-primary ring-4 ring-white z-10"></div>

                <!-- Spacer for alternating layout -->
                <div class="hidden md:block md:w-1/2"></div>
              </div>
            </AnimatedSection>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Leadership Preview -->
  <section class="py-24 bg-cream">
    <div class="max-w-7xl mx-auto px-6">
      <AnimatedSection client:visible direction="up">
        <div class="flex flex-col lg:flex-row lg:items-end justify-between gap-8 mb-16">
          <div class="max-w-2xl">
            <span class="text-primary font-mono text-xs tracking-widest uppercase mb-4 block">Leadership</span>
            <h2 class="text-display-lg text-charcoal">The Team</h2>
          </div>
          <a href="/en/company/leadership" class="group inline-flex items-center gap-2 font-medium text-charcoal hover:text-primary transition-colors">
            View full team
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </AnimatedSection>

      <div class="grid md:grid-cols-3 gap-6">
        {page?.teamPreview?.map((member, i) => (
          <AnimatedSection client:visible direction="up" delay={0.1 * i}>
            <div class="group p-8 rounded-xl bg-white border border-border shadow-sm hover:shadow-md hover:border-primary/20 transition-all duration-300 text-center">
              <div class="w-20 h-20 rounded-full bg-primary/10 mx-auto mb-5 flex items-center justify-center ring-4 ring-white shadow-sm group-hover:bg-primary/15 transition-colors duration-300">
                <span class="text-xl font-display font-semibold text-primary">
                  {member?.name?.split(' ').map(n => n[0]).join('')}
                </span>
              </div>
              <h3 class="text-lg font-medium text-charcoal group-hover:text-primary transition-colors">{member?.name}</h3>
              <p class="text-sm text-primary font-medium mb-3">{member?.role}</p>
              <p class="text-sm text-muted leading-relaxed">{member?.bio}</p>
            </div>
          </AnimatedSection>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-24 bg-charcoal text-white relative overflow-hidden">
    <!-- Decorative gradients -->
    <div class="absolute top-0 left-1/4 w-[500px] h-[500px] bg-primary/20 rounded-full blur-[150px]"></div>
    <div class="absolute bottom-0 right-1/4 w-[400px] h-[400px] bg-violet/15 rounded-full blur-[120px]"></div>

    <AnimatedSection client:visible direction="up">
      <div class="max-w-3xl mx-auto px-6 text-center relative z-10">
        <h2 class="text-display-md text-white mb-6">
          {page?.cta?.headline}
        </h2>
        <p class="text-body-lg text-white/70 mb-10 leading-relaxed">
          {page?.cta?.description}
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a href={page?.cta?.primaryCta?.href} class="btn bg-white text-charcoal hover:bg-white/90 shadow-lg hover:shadow-xl transition-all px-8 py-3 rounded-lg font-medium">
            {page?.cta?.primaryCta?.text}
          </a>
          <a href={page?.cta?.secondaryCta?.href} class="btn bg-white/10 text-white border border-white/20 hover:bg-white/20 backdrop-blur-sm px-8 py-3 rounded-lg font-medium transition-all">
            {page?.cta?.secondaryCta?.text}
          </a>
        </div>
      </div>
    </AnimatedSection>
  </section>
</Page>
