---
export const prerender = false;

const runtime = (Astro.locals as any).runtime;
const GITHUB_TOKEN = runtime?.env?.GITHUB_TOKEN;
const REPO = 'Trueleap/trueleap-inc';

type PR = {
  number: number;
  title: string;
  head: { ref: string };
  user: { login: string };
  created_at: string;
  mergeable: boolean | null;
  mergeable_state: string;
};

let prs: PR[] = [];
let error = '';

try {
  const res = await fetch(
    `https://api.github.com/repos/${REPO}/pulls?state=open&per_page=50`,
    { headers: { Authorization: `Bearer ${GITHUB_TOKEN}`, Accept: 'application/vnd.github+json' } }
  );
  if (!res.ok) throw new Error(`GitHub API: ${res.status}`);
  const all: PR[] = await res.json();
  prs = all.filter((pr) => pr.head.ref.startsWith('content/'));
} catch (e: any) {
  error = e.message;
}

function previewUrl(branch: string) {
  const slug = branch.replace(/[^a-zA-Z0-9]/g, '-').toLowerCase();
  return `https://${slug}.trueleap-inc.pages.dev`;
}

function relativeTime(dateStr: string) {
  const diff = Date.now() - new Date(dateStr).getTime();
  const mins = Math.floor(diff / 60000);
  if (mins < 60) return `${mins}m ago`;
  const hrs = Math.floor(mins / 60);
  if (hrs < 24) return `${hrs}h ago`;
  return `${Math.floor(hrs / 24)}d ago`;
}
---

<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <title>Content Previews - TrueLeap Admin</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif; background: #0a0a0a; color: #e5e5e5; min-height: 100vh; }
    .header { display: flex; align-items: center; justify-content: space-between; padding: 1rem 2rem; border-bottom: 1px solid #262626; background: #111; }
    .header h1 { font-size: 1.25rem; font-weight: 600; }
    .header-actions { display: flex; gap: 0.75rem; }
    .header-actions a, .header-actions button { padding: 0.5rem 1rem; border-radius: 0.375rem; font-size: 0.875rem; text-decoration: none; cursor: pointer; border: none; }
    .btn-secondary { background: #262626; color: #e5e5e5; }
    .btn-secondary:hover { background: #333; }
    .btn-primary { background: #2563eb; color: #fff; }
    .btn-primary:hover { background: #1d4ed8; }
    .container { max-width: 64rem; margin: 2rem auto; padding: 0 1.5rem; }
    .empty { text-align: center; padding: 4rem 0; color: #737373; }
    .empty p { margin-bottom: 1rem; }
    .error-banner { background: #7f1d1d; color: #fca5a5; padding: 1rem; border-radius: 0.5rem; margin-bottom: 1.5rem; }
    .card { background: #171717; border: 1px solid #262626; border-radius: 0.75rem; padding: 1.5rem; margin-bottom: 1rem; }
    .card-header { display: flex; align-items: start; justify-content: space-between; margin-bottom: 0.75rem; }
    .card-title { font-size: 1.125rem; font-weight: 600; color: #f5f5f5; }
    .card-meta { font-size: 0.8125rem; color: #737373; margin-top: 0.25rem; }
    .badge { display: inline-block; padding: 0.125rem 0.5rem; border-radius: 9999px; font-size: 0.75rem; font-weight: 500; }
    .badge-ok { background: #052e16; color: #4ade80; }
    .badge-conflict { background: #451a03; color: #fb923c; }
    .badge-unknown { background: #1c1917; color: #a8a29e; }
    .card-actions { display: flex; gap: 0.5rem; margin-top: 1rem; }
    .btn-publish { background: #16a34a; color: #fff; padding: 0.5rem 1rem; border: none; border-radius: 0.375rem; cursor: pointer; font-size: 0.875rem; }
    .btn-publish:hover { background: #15803d; }
    .btn-publish:disabled { opacity: 0.4; cursor: not-allowed; }
    .btn-preview { background: transparent; border: 1px solid #404040; color: #e5e5e5; padding: 0.5rem 1rem; border-radius: 0.375rem; text-decoration: none; font-size: 0.875rem; }
    .btn-preview:hover { border-color: #525252; }
    .btn-rebase { background: #d97706; color: #fff; padding: 0.5rem 1rem; border: none; border-radius: 0.375rem; cursor: pointer; font-size: 0.875rem; }
    .btn-rebase:hover { background: #b45309; }
    .btn-rebase:disabled { opacity: 0.4; cursor: not-allowed; }
    dialog { background: #171717; color: #e5e5e5; border: 1px solid #404040; border-radius: 0.75rem; padding: 1.5rem; max-width: 28rem; }
    dialog::backdrop { background: rgba(0,0,0,0.7); }
    dialog .dialog-actions { display: flex; gap: 0.5rem; justify-content: flex-end; margin-top: 1.5rem; }
  </style>
</head>
<body>
  <div class="header">
    <h1>Content Previews</h1>
    <div class="header-actions">
      <a href="/keystatic" class="btn-secondary">Open CMS</a>
      <button onclick="location.reload()" class="btn-secondary">Refresh</button>
    </div>
  </div>

  <div class="container">
    {error && <div class="error-banner">Failed to load PRs: {error}</div>}

    {prs.length === 0 && !error && (
      <div class="empty">
        <p>No pending content changes.</p>
        <a href="/keystatic" class="btn-primary">Open CMS to make edits</a>
      </div>
    )}

    {prs.map((pr) => {
      const mergeable = pr.mergeable === true;
      const conflict = pr.mergeable === false;
      return (
        <div class="card" data-pr={pr.number}>
          <div class="card-header">
            <div>
              <div class="card-title">{pr.title}</div>
              <div class="card-meta">
                #{pr.number} &middot; {pr.head.ref} &middot; {pr.user.login} &middot; {relativeTime(pr.created_at)}
              </div>
            </div>
            {mergeable && <span class="badge badge-ok">Ready</span>}
            {conflict && <span class="badge badge-conflict">Conflict</span>}
            {!mergeable && !conflict && <span class="badge badge-unknown">Checking...</span>}
          </div>
          <div class="card-actions">
            <a href={previewUrl(pr.head.ref)} target="_blank" rel="noopener" class="btn-preview">View Preview</a>
            {conflict && (
              <button
                class="btn-rebase"
                data-pr-number={pr.number}
                onclick="rebasePr(this)"
              >
                Resolve Conflict
              </button>
            )}
            <button
              class="btn-publish"
              disabled={conflict}
              data-pr-number={pr.number}
              onclick="openConfirm(this)"
            >
              Publish
            </button>
          </div>
        </div>
      );
    })}
  </div>

  <dialog id="confirm-dialog">
    <p>Merge this PR to production? This will publish the content changes immediately.</p>
    <div class="dialog-actions">
      <button class="btn-secondary" onclick="document.getElementById('confirm-dialog').close()">Cancel</button>
      <button class="btn-publish" id="confirm-btn">Publish</button>
    </div>
  </dialog>

  <script is:inline>
    let pendingPr = null;

    function openConfirm(btn) {
      pendingPr = btn.dataset.prNumber;
      document.getElementById('confirm-dialog').showModal();
    }

    async function rebasePr(btn) {
      const prNumber = btn.dataset.prNumber;
      btn.disabled = true;
      btn.textContent = 'Resolving...';
      try {
        const res = await fetch('/api/admin/rebase-pr', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ prNumber: Number(prNumber) }),
        });
        const data = await res.json();
        if (!res.ok) throw new Error(data.error || 'Rebase failed');
        location.reload();
      } catch (e) {
        alert('Error: ' + e.message);
        btn.disabled = false;
        btn.textContent = 'Resolve Conflict';
      }
    }

    document.getElementById('confirm-btn').addEventListener('click', async () => {
      const dialog = document.getElementById('confirm-dialog');
      const btn = document.getElementById('confirm-btn');
      btn.disabled = true;
      btn.textContent = 'Publishing...';

      try {
        const res = await fetch('/api/admin/merge-pr', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ prNumber: Number(pendingPr) }),
        });
        const data = await res.json();
        if (!res.ok) throw new Error(data.error || 'Merge failed');

        const card = document.querySelector(`[data-pr="${pendingPr}"]`);
        if (card) card.remove();

        dialog.close();

        if (!document.querySelector('.card')) {
          document.querySelector('.container').innerHTML =
            '<div class="empty"><p>No pending content changes.</p><a href="/keystatic" class="btn-primary">Open CMS to make edits</a></div>';
        }
      } catch (e) {
        alert('Error: ' + e.message);
      } finally {
        btn.disabled = false;
        btn.textContent = 'Publish';
      }
    });
  </script>
</body>
</html>
